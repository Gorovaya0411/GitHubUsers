<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detailed_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".ui.activities.DetailedUser">

    <androidx.cardview.widget.CardView
        android:id="@+id/ImageView"
        android:layout_width="211dp"
        android:layout_height="181dp"
        android:layout_margin="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#E3F2FD"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/_" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/bioUser"
        android:layout_width="368dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/_1"
        android:fontFamily="@font/architects"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#FF1E0123"
        android:textColorLink="#DA00FF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/created_at" />

    <TextView
        android:id="@+id/created_at"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rectangle"
        android:fontFamily="@font/architects"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#FF1E0123"
        android:textColorLink="#DA00FF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationUser" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="115dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/_1"
        android:fontFamily="@font/architects"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#FF1E0123"
        android:textColorLink="#DA00FF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bioUser" />

    <TextView
        android:id="@+id/following"
        android:layout_width="115dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/_1"
        android:fontFamily="@font/architects"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#FF1E0123"
        android:textColorLink="#DA00FF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bioUser" />

    <TextView
        android:id="@+id/locationUser"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        android:background="@drawable/fon"
        android:fontFamily="@font/architects"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#1E0123"
        android:textColorLink="#DA00FF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="73dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/fredoka"
        android:text="@string/followers"
        android:textColor="@android:color/tertiary_text_dark"
        app:layout_constraintStart_toEndOf="@+id/following"
        app:layout_constraintTop_toBottomOf="@+id/bioUser" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="73dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/fredoka"
        android:text="@string/following"
        android:textColor="@android:color/tertiary_text_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/followers" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/fon"
        android:fontFamily="@font/architects"
        android:gravity="center|center_vertical"
        android:textColor="#DA00FF"
        android:textColorHint="#DA00FF"
        android:textColorLink="#DA00FF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/fredoka"
        android:text="@string/name"
        android:textColor="@android:color/tertiary_text_dark"
        app:layout_constraintBottom_toTopOf="@+id/UserName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/fredoka"
        android:text="@string/user_location"
        android:textColor="@android:color/tertiary_text_dark"
        app:layout_constraintBottom_toTopOf="@+id/locationUser"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/fredoka"
        android:text="@string/page_created"
        android:textColor="@android:color/tertiary_text_dark"
        app:layout_constraintBottom_toTopOf="@+id/created_at"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/fredoka"
        android:text="@string/user_biography"
        android:textColor="@android:color/tertiary_text_dark"
        app:layout_constraintBottom_toTopOf="@+id/bioUser"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>